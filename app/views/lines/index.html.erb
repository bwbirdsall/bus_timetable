<div class="header"><h1>All the Lines</h1></div>

<ul>
  <% @lines.each do |line| %>
    <li><a href="/lines/<%= line.id %>"><%= line.name %></a></li>
  <% end %>
</ul>

<h3>Add new line</h3>
<%= form_for(@line) do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <%= f.submit(:class => "btn btn-warning") %>
<% end %>
<p><br><%= link_to "Main Stations Page", stations_path, :class => "btn btn-primary" %>
   <%= link_to "Main Stops Page", stops_path, :class => "btn btn-primary" %></p>
